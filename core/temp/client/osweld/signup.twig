{% include 'header.twig' %}

<section class="regArea">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6 d-none d-md-block">
						<div class="regRight mt-5 mt-lg-0">
                            <div class="regSteps">
                                <ul class="list-unstyled mb-0">
                                    <li class="d-md-flex justify-content-between align-items-center mb-3">
                                        <div class="me-3">
                                            <i class="far fa-bullseye-pointer"></i>
                                        </div>
                                        <div>
                                            <h6>Entrega Automática</h6>
                                            <p class="m-0">
                                               Em nosso painel de concessionária totalmente automático, os pedidos que você faz são processados ​​e concluídos automaticamente.
                                            </p>
                                        </div>
                                    </li>
                                    <li class="d-md-flex justify-content-between align-items-center mb-3">
                                        <div class="me-3">
                                            <i class="far fa-credit-card"></i>
                                        </div>
                                        <div>
                                            <h6>Pagamento seguro</h6>
                                            <p class="m-0">
                                              Pagamentos automaticos via PIX, pague com cartão de credito pelo PayPal ou MercadoPago
                                            </p>
                                        </div>
                                    </li>
                                    <li class="d-md-flex justify-content-between align-items-center">
                                        <div class="me-3">
                                            <i class="far fa-gem"></i>
                                        </div>
                                        <div>
                                            <h6>Serviço de qualidade</h6>
                                            <p class="m-0">
                                                Estamos trabalhando para lhe dar o melhor serviço com qualidade e serviços acessíveis.
                                             </p>
                                        </div>
                                    </li>
                                </ul>
                                <div class="shape">
                                    <ul class="list-unstyled mb-0">
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                    </ul>
                                </div>
                            </div>
                        </div>   

			</div>
			<div class="col-lg-6">
			
				<div class="gcard">
							   <div class="gcard-header">
								  <div class="row align-items-center">
									<div class="col d-flex align-items-center">
										<div class="ch-g-ticon">
										  <div class="gcard-head-icon">
											<i class="ri-user-add-line"></i>
										  </div>
										</div>
										<div class="ch-text">
										  <h3 class="gcard-title">Registrar agora!</h3>
										</div>
									</div>
								  </div>
							   </div>
					<div class="gcard-body">
					  {% if errorText %}
						<div class="alert alert-dismissible alert-danger">
						  <button type="button" class="close" data-dismiss="alert">×</button>
						  {{ errorText }}
						</div>
					  {% endif %}
					  {% if successText %}
						<div class="alert alert-dismissible alert-success">
						  <button type="button" class="close" data-dismiss="alert">×</button>
						  {{ successText }}
						</div>
					  {% endif %}
					  
						<form method="post" action="">
						 <div class="form-group">
							<label for="username" class="control-label">{{ lang['signup.username'] }}</label>
							<input type="text" class="form-control" name="username" value="{{ data['username'] }}">
						 </div>  
						{% if settings['name_secret'] == 2 %}
						  <div class="form-group">
							<label for="username" class="control-label">{{ lang['signup.first_name'] }}</label>
							<input type="text" class="form-control"  name="first_name" value="{{ data['first_name'] }}">
						  </div>
						  <div class="form-group">
							<label for="username" class="control-label">{{ lang['signup.last_name'] }}</label>
							<input type="text" class="form-control"  name="last_name" value="{{ data['last_name'] }}">
						  </div>
						{% endif %}
						 
						  <div class="form-group">
							<label for="username" class="control-label">{{ lang['signup.email'] }}</label>
							<input type="text" class="form-control" name="email" value="{{ data['email'] }}">
						  </div>
						{% if settings['skype_area'] == 2 %}
						  <div class="form-group">
							<label for="username" class="control-label">{{ lang['signup.telephone'] }}</label>
							<input type="text" class="form-control" name="telephone" value="{{ data['telephone'] }}">
						  </div>
						{% endif %}
						  <div class="form-group">
							<label for="password" class="control-label">{{ lang['signup.password'] }}</label>
							<input type="password" class="form-control" name="password">
						  </div>
						  <div class="form-group">
							<label for="password" class="control-label">{{ lang['signup.confirm'] }}</label>
							<input type="password" class="form-control" name="password_again">
						  </div>
						{% if settings['terms_checkbox'] == 2 %}
								  <div class="checkbox">
									<label>
									  <input type="checkbox" name="terms" value="1"> {{ lang['signup.accept_terms_text'] }}
									</label>
								  </div>
								{% endif %}
			
				{% if settings['recaptcha'] == 2 %}
						   {% if captcha %}
						  <div class="form-group">
							 <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
						  </div>
				
				{% endif %}
						  {% endif %}
							<button type="submit" class="btn btn-primary btn-block click">{{ lang['signup.button'] }}</button>
						</form>
					</div>
				</div>
			</div>
		
		</div>
	</div>
	<a href="https://bmilimitada.com/">
    <img src="" alt="">
</a>
</section>

{% for lang in site['languages'] %}
  {% if lang['active'] %}
    <script src="https://www.google.com/recaptcha/api.js?hl={{ lang['code'] }}"></script>
  {% endif %}
{% endfor %}
<script src="https://www.google.com/recaptcha/api.js"></script>

{% include 'footer.twig' %}