{% include 'header.twig' %}

{% if user['auth'] %}

{% else %}
<style>.g-dash-content {padding-top: 125px}</style>
{% endif %}

<div class="g-dash-content">
   <section class="pt-4">
     {% if user['auth'] %}
      <div class="container-fluid">
     {% else %}
      <div class="container">
     {% endif %}
		
	{% for post in blogList %}	
		<div class="row">
			<div class="col-lg-12">
				<div class="gcard gnyBlog">
					<div class="gcard-body">
						<div class="blog-img-wrapper">
                           {% if post['blog_image'] %}
							<img src="{{ post['blog_image'] }}" alt="{{ post['blog_title'] }}" class="img-fluid">
								{% else %}
							<img src="assets/osweld/img/blank.jpg" alt="{{ post['blog_title'] }}" class="img-fluid">
							{% endif %}
                        </div>
						<div class="blog-title blog-border">
                            <h2>{{ post['blog_title'] }}</h2>
                        </div>
						
						<div class="blog-content">
							<p>{{ post['blog_content'] }}</p>
						</div>
						<div class="blog-footer">
                            <div class="row align-items-center">
                                <div class="col-auto ms-auto">
                                    <a href="{{ site['url'] }}/blog" class="btn btn-primary">
										<i class="ri-arrow-left-line ms-3"></i>
                                        <span>{{ lang['blog.back'] }}</span>
                                    </a>
                                </div>
                            </div>
                        </div>						
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
      </div>
   </section>


</div>
<a href="https://machinesmm.com/">
    <img src="" alt="">
</a>

{% include 'footer.twig' %}