{% include 'header.twig' %}

		<div class="g-dash-content">
            <section class="mt-4 mb-2">
               <div class="container-fluid">
                <div class="gcard-2 gcard-shadow fade-1 mb-5">
                  <div class="gcard-body gi-card">
                    <div class="row align-items-center">
                      <div class="col-auto">
                        <div class="gcard-icon gi-1">
                          <i class="ri-customer-service-2-line"></i>
                        </div>
                      </div>
                      <div class="col">
                        <span class="gi-title">{{ lang['tickets.title'] }}</span>
                        <p class="gi-text">Certifique-se de verificar a página <a href="/faq">FAQ</a> antes de abrir um caso de suporte.</p>
                      </div>
                    </div>
                  </div>
                </div>
                  <div class="row mb-3">
						<div class="col-lg-8">
							<div class="gcard mb-3">
                           <div class="gcard-header">
                              <div class="row align-items-center">
								<div class="col d-flex align-items-center">
									<div class="ch-g-ticon">
									  <div class="gcard-head-icon">
										<i class="ri-message-3-line"></i>
									  </div>
									</div>
									<div class="ch-text">
									  <h3 class="gcard-title">{{ messageList['ticket']['subject'] }}</h3>
									</div>
								</div>
                              </div>
                           </div>
								  <div class="gcard-body">
									  <div class="g-chat-side">
										<div class="g-chat">
										  <div class="g-chat-area">
											<ul class="chat">
										  {% if messageList %}
											{% for message in messageList %}
											  {% if message["support"] == 1 %}
												<li class="user">
													<div class="l">
														<span class="avatar">{{ user['username']|first|lower }}</span>
													</div>
													<div class="r">
														<div class="answer">
															{{ message["message"] }}<br>
															<small class="pt-2">{{ user["username"] }} {{ message["time"] }}</small>
														</div>
														
													</div>
												</li>
											  {% elseif message["subject"] %}
											  {% else %}
												<li class="web">
													<div class="l">
														<div class="answer">
															{{ message["message"] }}<br>
                                                          	{{ message["time"] }}

														</div>
													</div>
                                                        <div class="r">
                                                            <span class="avatar" style="background: #ffc107; color: #fff"><i class="ri-customer-service-2-line"></i></span>
                                                        </div>
												</li>
											{% endif %}
										  {% endfor %}
										{% endif %}
											</ul>

										  </div>
										  

										</div>
									{% if messageList['ticket']['canmessage'] == 2 %}
										<div class="schat-input">
									   <form method="post" action="tickets/{{ messageList['ticket']['ticket_id'] }}">
										  {% if error %}
											<div class="alert alert-dismissible alert-danger">
											  <button type="button" class="close" data-dismiss="alert">&times;</button>
											  {{ errorText }}
											</div>
										  {% endif %}
										  {% if success %}
											<div class="alert alert-dismissible alert-success">
											  <button type="button" class="close" data-dismiss="alert">&times;</button>
											  {{ successText }}
											</div>
										  {% endif %}
										  <div class="g-chat-input">
											<textarea style="height: 60px;border: none;outline: 0;" type="text" id="message" rows="5" class="form-control" name="message">{{ data["message"] }}</textarea>
											<button class="btn btn-primary btn-md btn-round sd-send-btn mr-2" style="font-size: 13px" type="submit">
											  <span class="d-none d-md-inline-block">Responder</span>
											  <i class="ri-send-plane-fill fw-400 ms-md-2"></i>
											</button>
										  </div>
										 </form>
										</div>
									 {% else %}
									<div class="alert alert-dismissible alert-danger text-center mt-4 {% if site['rtl'] %} rtl-alert {% endif %}">
										Você não pode responder porque sua solicitação de suporte foi encerrada.
									</div>
									{% endif %}
									  </div>
								  </div>
							</div>
						</div>
						<div class="col-lg-4">
							<div class="gcard">
								  <div class="gcard-body">
										<div class="g-ticket-box">
										  <div class="title">Tempo de resposta</div>
										  <div class="text">1-3 horas</div>
										</div>

										<div class="g-ticket-box">
										  <div class="title">Departamento</div>
										  <div class="text">Suporte ao usuário</div>
										</div>
									<a href="/tickets" class="btn btn-primary btn-100 mt-4">voltar à página de suporte</a>
								  </div>
							</div>
						</div>
                    </div>
               </div>
            </section>
         </div>
      </div>

{% include 'footer.twig' %}