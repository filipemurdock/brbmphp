{% include 'header.twig' %}

<style>
    #sam {
        display: none; /* Oculta por padrão */
    }

    .error-message {
        color: red;
        font-size: 12px;
    }
</style>
<div class="g-dash-content">
   <section class="mt-4 mb-2">
      <div class="container-fluid">
         <div class="gcard-2 gcard-shadow fade-1 mb-5">
            <div class="gcard-body gi-card">
               <div class="row align-items-center">
                  <div class="col-auto">
                     <div class="gcard-icon gi-1">
                        <i class="ri-exchange-dollar-line"></i>
                     </div>
                  </div>
                  <div class="col">
                     <span class="gi-title">Resgatar cupom</span>
                     <p class="gi-text">Faça os resgates dos seus códigos aqui</p>
                  </div>
               </div>
            </div>
         </div>

         {% if user['auth'] %}

         {% else %}
            <style>
               @media (max-width: 991.98px) {
                  .main-top {padding: 70px 0 40px 0!important}
               }
               .lgn-btn {display: none!important}

               @media (min-width: 1199.98px) {
                  .main-top { padding: 400px 0 40px 0}
                  .app-content { margin-top: -300px }
               }
            </style>

            <div class="main-top">
               <div class="main-top-bg"></div>
            </div>
         {% endif %}

         <div class="app-content">
            {% if user['auth'] %}
               <div class="container-fluid">
            {% else %}
               <div class="container">
            {% endif %}
               <section class="app-childs">
                  <div class="row mb-3">
                     <div class="col-lg-7 mb-3">
                        <div class="gcard">
                           <div class="gcard-header">
                              <div class="row align-items-center">
                                 <div class="col d-flex align-items-center d-none-imp">
                                    <div class="ch-g-ticon">
                                       <div class="gcard-head-icon">
                                          <i class="ri-wallet-3-line"></i>
                                       </div>
                                    </div>
                                    <div class="ch-text">
                                       <h3 class="gcard-title">Resgatar cupom</h3>
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <div class="gcard-body">
                              {% if error %}
                                 <div class="alert alert-dismissible alert-danger">
                                    <button type="button" class="close" data-dismiss="alert">×</button>
                                    {{ errorText }}
                                 </div>
                              {% endif %}
                              {% if success %}
                                 <div class="alert alert-dismissible alert-success">
                                    <button type="button" class="close" data-dismiss="alert">×</button>
                                    {{ successText }}
                                 </div>
                              {% endif %}
                              <form method="post" action="kupon">
                                 <div class="form-group">
                                    <label for="kuponadi" class="control-label" style="padding: 10px; font-size: 25px; font-weight: 700;">Código do Cupom</label>
                                    <input type="text" class="form-control" id="kuponadi" name="kuponadi">
                                 </div>
<button style="background-color: color; color: ;" type="submit" class="btn btn-primary btn-block">{% if user['lang'] == "ar" %}يسترد{% else %}Resgatar{% endif %}</button>

                              </form>
                           </div>
                        </div>
                     </div>
                  </div>
               </section>
            </div>
         </div>
      </div>
   </section>
</div>

{% include 'footer.twig' %}