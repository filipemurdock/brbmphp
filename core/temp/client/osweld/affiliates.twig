				  	<div class="d-flex aff-item align-items-center justify-content-between">
                      <span>{{ lang['affiliates.click'] }}</span>
                      <span class="aff-bold">{{ user['total_click'] }}</span>
                    </div>
				  	<div class="d-flex aff-item align-items-center justify-content-between">
                      <span>{{ lang['affiliates.total.user'] }}</span>
                      <span class="aff-bold">{{ refCount }}</span>
                    </div>
				  	<div class="d-flex aff-item align-items-center justify-content-between">
                      <span>{{ lang['affiliates.total.win'] }}</span>
                      <span class="aff-bold">{{ user['refchar'] }}{{ site['currency'] }}</span>
                    </div>

                  </div>
               </div>
            </div>
