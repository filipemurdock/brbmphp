{% include 'header.twig' %}

<section class="regArea">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6 d-none d-md-block">
						<div class="regRight mt-5 mt-lg-0">
                            <div class="regSteps">
                                <ul class="list-unstyled mb-0">
                                     <li class="d-md-flex justify-content-between align-items-center mb-3">
                                        <div class="me-3">
                                            <i class="far fa-bullseye-pointer"></i>
                                        </div>
                                        <div>
                                            <h6>Entrega Automática</h6>
                                            <p class="m-0">
                                                Em nosso painel de concessionária totalmente automático, os pedidos que você faz são processados ​​e concluídos automaticamente.
                                            </p>
                                        </div>
                                    </li>
                                    <li class="d-md-flex justify-content-between align-items-center mb-3">
                                        <div class="me-3">
                                            <i class="far fa-credit-card"></i>
                                        </div>
                                        <div>
                                            <h6>Pagamento seguroe</h6>
                                            <p class="m-0">
                                                Com a garantia PayTR, você pode fazer seus pagamentos por cartão de crédito ou transferência bancária.
                                            </p>
                                        </div>
                                    </li>
                                    <li class="d-md-flex justify-content-between align-items-center">
                                        <div class="me-3">
                                            <i class="far fa-gem"></i>
                                        </div>
                                        <div>
                                            <h6>Serviço de qualidade</h6>
                                            <p class="m-0">
                                                Estamos trabalhando para lhe dar o melhor serviço com qualidade e serviços acessíveis.
                                            </p>
                                        </div>
                                    </li>
                                </ul>
                                <div class="shape">
                                    <ul class="list-unstyled mb-0">
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                    </ul>
                                </div>
                            </div>
                        </div>   

			</div>
			<div class="col-lg-6">
			
				<div class="gcard">
							   <div class="gcard-header">
								  <div class="row align-items-center">
									<div class="col d-flex align-items-center">
										<div class="ch-g-ticon">
										  <div class="gcard-head-icon">
											<i class="ri-key-line"></i>
										  </div>
										</div>
										<div class="ch-text">
										  <h3 class="gcard-title">{{ lang['signin.password.lost'] }}</h3>
										</div>
									</div>
								  </div>
							   </div>
					<div class="gcard-body">
						{% if resetStep == 1 %}

							  {% if errorText %}
								<div class="alert alert-dismissible alert-danger">
								  <button type="button" class="close" data-dismiss="alert">&times;</button>
								  {{ errorText }}
								</div>
							  {% endif %}
							  {% if successText %}
								<div class="alert alert-dismissible alert-success">
								  <button type="button" class="close" data-dismiss="alert">&times;</button>
								  {{ successText }}
								</div>
							  {% endif %}

							
								<form method="post" action="">

								  <div class="form-group">
									<label for="username" class="control-label">{{ lang['resetpassword.user'] }}</label>
									<input type="text" class="form-control" name="user" value="{{ data['user'] }}">
								  </div>

								  <div class="form-group">
									<label for="username" class="control-label">{{ lang['resetpassword.type'] }}</label>
									<select class="form-control" name="type">
									 {% for reset in resetType %}
									  <option value="{{ reset['type'] }}">{{ reset['name'] }}</option>
									 {% endfor %}
									</select>
								  </div>

									{% if settings['recaptcha'] == 2 %}
								  {% if captcha %}
									<div class="form-group">
									  <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
									</div>
								  {% endif %}
								  {% endif %}

									<button type="submit" class="btn btn-primary btn-block click">{{ lang['resetpassword.button'] }}</button>
								</form>

						{% else %}

							  {% if errorText %}
								<div class="alert alert-dismissible alert-danger">
								  <button type="button" class="close" data-dismiss="alert">&times;</button>
								  {{ errorText }}
								</div>
							  {% endif %}
							  {% if successText %}
								<div class="alert alert-dismissible alert-success">
								  <button type="button" class="close" data-dismiss="alert">&times;</button>
								  {{ successText }}
								</div>
							  {% endif %}

							 
								<form method="post" action="">

								  <div class="form-group">
									<label for="username" class="control-label">{{ lang['account.password.new'] }}</label>
									<input type="password" class="form-control" name="password">
								  </div>

								  <div class="form-group">
									<label for="username" class="control-label">{{ lang['account.password.confirm'] }}</label>
									<input type="password" class="form-control" name="confirm_password">
								  </div>

									<button type="submit" class="btn btn-primary btn-block click">{{ lang['resetpassword.button'] }}</button>
								</form>


						{% endif %}
					</div>
				</div>
			</div>
		
		</div>
	</div>
</section>

{% for lang in site['languages'] %}
  {% if lang['active'] %}
    <script src="https://www.google.com/recaptcha/api.js?hl={{ lang['code'] }}"></script>
  {% endif %}
{% endfor %}
<script src="https://www.google.com/recaptcha/api.js"></script>


{% include 'footer.twig' %}